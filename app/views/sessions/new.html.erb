<h1 class="text-center mt-4">Login</h1>
<div class="container">

  <div class="row justify-content-center">
      <div class="col-10">
      <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :email, class: "col-2 col-form-label text-dark" %>
          <div class="col-10">
            <%= f.email_field :email, class: "form-control shadow rounded mt-3", placeholder: "Enter Your Email" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :password, class: "col-2 col-form-label text-dark" %>
          <div class="col-10">
            <%= f.password_field :password , class: "form-control shadow rounded mt-3", placeholder: "Enter Your Password" %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit"Login" , class: "btn btn-outline-light btn-lg mt-3 w-50" %>
        </div>
      <% end %>
    </div>
    <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info" %>
  </div>
</div>