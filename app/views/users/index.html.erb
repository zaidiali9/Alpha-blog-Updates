<h1 class="text-center mt-4">Alpha-Bloggers</h1>
<% @user.each do |user| %>
  <div class="row justify-content-md-center">
    <div class="col-8 mt-5">
      <div class="card text-center shadow-lg mb-5 bg-body rounded">
        <div class="card-header fst-italic">
          By <%= link_to user.username, user_path(user)%>
        </div>
        <div class="card-body">
          <h5 class="card-title">
            <%= link_to gravatar_for(user) %>
          </h5>
          <p class="card-text"><%= pluralize(user.articles.count, "articles") %></p>
          <%= link_to "View Profile", user, class: "btn btn-outline-success" %>
          <% if logged_in && (user==current_user || current_user.admin?) %>
          <%= link_to "Edit Profile", edit_user_path(user), class: "btn btn-outline-info" %>
          <%end %>
        </div>
        <div class="card-footer text-muted">
          Joined Ago:<%= time_ago_in_words(user.created_at)%>

        </div>
      </div>
    </div>
  </div>
<% end %>