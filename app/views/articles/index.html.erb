

<h1 class="text-center mt-4">Articles Listing Page</h1>
<div class="container">
<% @articles.each do |article| %>
<div class="row justify-content-md-center">
<div class="col-8 mt-5">
<div class="card text-center shadow-lg mb-5 bg-body rounded">
  <div class="card-header fst-italic">
    By <%=article.user.username if article.user %>
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-success text-decoration-none" %></h5>
    <p class="card-text"><%= truncate(article.description, length: 100) %></p>
    <%= link_to "View", article, class: "btn btn-outline-success" %>
    <% if logged_in && (article.user==current_user || current_user.admin?) %>
    <%= link_to "Edit", edit_article_path(article), class: "btn btn-outline-info" %>
    <%= link_to "Delete", article, method: :delete, class: "btn btn-outline-danger" %>
      <% end %>
  </div>
  <div class="card-footer text-muted">
    Created Ago:<%= time_ago_in_words(article.created_at)%>
    Updated Ago:<%= time_ago_in_words(article.updated_at)%>
  </div>
</div>
</div>
</div>
<% end %>
</div>
